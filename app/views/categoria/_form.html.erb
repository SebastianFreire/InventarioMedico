<div class="row">
  <div class="col-lg-12">
    <div class="card p-5">
      <%= form_with model: @categorium do |f| %>
        <% if @categorium.errors.any? %>
          <div class="alert alert-danger">
            <ul>
              <% @categorium.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="form-group">
          <%= f.label :nombre, "Nombre" %>
          <%= f.text_field :nombre, class: "form-control", placeholder: 'Nombre de la categoría' %>
        </div>
        <div class="form-group">
          <%= f.label :descripcion, "Descripción" %>
          <%= f.text_area :descripcion, class: "form-control", placeholder: 'Añada una descripción de la categoria' %>
        </div>
        <div class="form-group">
          <%= f.submit "Guardar categoría", class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
